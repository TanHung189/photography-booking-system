@model IEnumerable<PhotoBooking.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 text-gray-800 fw-bold">Danh mục Dịch vụ</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="fa-solid fa-plus me-2"></i> Thêm danh mục
        </a>
    </div>

    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 bg-white">
            <h6 class="m-0 fw-bold text-primary">Danh sách các loại hình chụp ảnh</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-muted">
                        <tr>
                            <th class="ps-4">Ảnh đại diện</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    @if (!string.IsNullOrEmpty(item.AnhDaiDien))
                                    {
                                        <img src="@item.AnhDaiDien" class="rounded shadow-sm" width="60" height="60" style="object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted border" style="width: 60px; height: 60px;">
                                            <i class="fa-regular fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-bold text-dark">@item.TenDanhMuc</td>
                                <td class="text-muted small text-truncate" style="max-width: 300px;">
                                    @item.MoTa
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-warning me-1">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>