@model IEnumerable<PhotoBooking.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 text-gray-800 fw-bold">Danh sách Người dùng</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="fa-solid fa-user-plus me-2"></i> Thêm thành viên
        </a>
    </div>

    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 bg-white">
            <h6 class="m-0 fw-bold text-primary">Tài khoản hệ thống</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-muted">
                        <tr>
                            <th class="ps-4 text-center" style="width: 100px;">Avatar</th>
                            <th>Thông tin cá nhân</th>
                            <th>Vai trò</th>
                            <th>Khu vực</th>
                            <th>Ngày tham gia</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-center">
                                    <img src="@(item.AnhDaiDien ?? "https://ui-avatars.com/api/?name=" + item.HoVaTen + "&background=random")"
                                         class="rounded-circle shadow-sm object-fit-cover"
                                         width="50" height="50" alt="Avatar">
                                </td>

                                <td>
                                    <div class="fw-bold text-dark">@item.HoVaTen</div>
                                    <div class="small text-muted">@@@item.TenDangNhap</div>
                                    <div class="small text-muted"><i class="fa-regular fa-envelope me-1"></i> @item.Email</div>
                                </td>

                                <td>
                                    @if (item.VaiTro == "Admin")
                                    {
                                        <span class="badge bg-danger rounded-pill">Quản trị viên</span>
                                    }
                                    else if (item.VaiTro == "Photographer")
                                    {
                                        <span class="badge bg-info text-dark rounded-pill">Nhiếp ảnh gia</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">Khách hàng</span>
                                    }
                                </td>

                                <td>
                                    @if (item.MaDiaDiemNavigation != null)
                                    {
                                        <span><i class="fa-solid fa-location-dot text-danger me-1"></i> @item.MaDiaDiemNavigation.TenThanhPho</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">---</span>
                                    }
                                </td>

                                <td class="text-muted small">
                                    @item.NgayTao?.ToString("dd/MM/yyyy")
                                </td>

                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.MaNguoiDung" class="btn btn-sm btn-warning me-1" title="Sửa">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaNguoiDung" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Bạn có chắc muốn xóa tài khoản @item.TenDangNhap không? Dữ liệu liên quan sẽ mất hết!')" title="Xóa">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>