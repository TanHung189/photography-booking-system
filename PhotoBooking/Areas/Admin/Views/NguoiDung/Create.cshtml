@model PhotoBooking.Models.NguoiDung

@{
    ViewData["Title"] = "Thêm người dùng mới";
}

<div class="container-fluid py-4">
    <div class="card shadow mb-4 border-0" style="max-width: 800px; margin: 0 auto;">
        <div class="card-header py-3 bg-white border-bottom">
            <h5 class="m-0 fw-bold text-primary"><i class="fa-solid fa-user-plus me-2"></i> Tạo tài khoản mới</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase small fw-bold mb-3">Thông tin đăng nhập</h6>

                        <div class="mb-3">
                            <label asp-for="TenDangNhap" class="form-label fw-bold">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="TenDangNhap" class="form-control" required placeholder="VD: user123" />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label fw-bold">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="MatKhau" type="password" class="form-control" required />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Vai trò</label>
                            <select asp-for="VaiTro" class="form-select" id="roleSelect" asp-items="ViewBag.RoleList"></select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase small fw-bold mb-3">Thông tin cá nhân</h6>

                        <div class="mb-3">
                            <label asp-for="HoVaTen" class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="HoVaTen" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoDienThoai" class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" />
                        </div>
                    </div>
                </div>

                <hr class="my-4 opacity-25">

                <h6 class="text-muted text-uppercase small fw-bold mb-3">Thông tin bổ sung</h6>

                <div class="row">
                    <div class="form-floating mb-3">
                        <input type="hidden" asp-for="TinhThanh" id="TinhThanhInput" />

                        <select class="form-select" id="province-select" style="height: 58px; padding-top: 25px;">
                            <option value="" selected>Chọn Tỉnh/Thành phố...</option>
                        </select>
                        <label for="province-select">Khu vực hoạt động</label>
                    </div>

                    <div class="col-md-6 mb-3" id="expField">
                        <label asp-for="SoNamKinhNghiem" class="form-label fw-bold">Kinh nghiệm (Năm)</label>
                        <input asp-for="SoNamKinhNghiem" class="form-control" type="number" min="0" value="0" />
                        <div class="form-text">Chỉ dành cho Nhiếp ảnh gia.</div>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Ảnh đại diện</label>
                    <input type="file" name="avatarFile" class="form-control" accept="image/*" />
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-light border rounded-pill px-4 me-2">Quay lại</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold">Tạo tài khoản</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script ẩn hiện ô Kinh nghiệm
        $(document).ready(function() {
            function toggleExp() {
                if ($("#roleSelect").val() === "Photographer") {
                    $("#expField").slideDown();
                } else {
                    $("#expField").slideUp();
                }
            }
            $("#roleSelect").change(toggleExp);
            toggleExp(); // Chạy lần đầu
        });
    </script>
}