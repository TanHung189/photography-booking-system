@model PhotoBooking.Models.GoiDichVu

@{
    ViewData["Title"] = "Xóa gói dịch vụ";
}

<div class="container-fluid py-4">
    <div class="card shadow mb-4" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 fw-bold"><i class="fa-solid fa-triangle-exclamation me-2"></i> Xác nhận xóa</h6>
        </div>
        <div class="card-body text-center">

            <h4 class="mb-4">Bạn có chắc chắn muốn xóa gói này?</h4>

            <div class="mb-4">
                @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                {
                    <img src="@Model.AnhDaiDien" class="img-thumbnail rounded shadow-sm" style="width: 200px; height: 150px; object-fit: cover;" />
                }
            </div>

            <h3 class="fw-bold text-primary">@Model.TenGoi</h3>
            <p class="text-muted">Giá: @Model.GiaTien.ToString("N0") đ</p>

            <div class="alert alert-warning small">
                <i class="fa-solid fa-circle-info me-1"></i>
                Hành động này không thể hoàn tác. Nếu gói này đã có đơn đặt hàng, bạn sẽ không thể xóa nó.
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="MaGoi" />

                <a asp-action="Index" class="btn btn-secondary me-2 px-4">Hủy bỏ</a>
                <button type="submit" class="btn btn-danger px-4 fw-bold">Xác nhận Xóa</button>
            </form>
        </div>
    </div>
</div>