@model IEnumerable<PhotoBooking.Models.GoiDichVu>

@{
    ViewData["Title"] = "Quản lý Gói Dịch Vụ";
}

<style>
    /* Style mặc định cho ảnh: Nhỏ gọn */
    .transition-img {
        width: 80px; /* Kích thước ban đầu */
        height: 60px;
        object-fit: cover; /* Cắt ảnh vừa khung, không méo */
        cursor: zoom-in; /* Con trỏ hình kính lúp */
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.3s ease; /* Hiệu ứng mượt */
        position: relative; /* Để z-index hoạt động */
        z-index: 1;
    }

        /* Khi di chuột vào: Phóng to */
        .transition-img:hover {
            transform: scale(3.5); /* Phóng to gấp 3.5 lần */
            z-index: 1000; /* Nổi lên trên cùng, đè lên các dòng khác */
            box-shadow: 0 10px 20px rgba(0,0,0,0.3); /* Đổ bóng cho nổi bật */
            border-color: #fff; /* Viền trắng cho đẹp */
        }
</style>
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between mb-4">
        <h2 class="h3 text-gray-800">Quản lý Gói Dịch Vụ</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus fa-sm text-white-50"></i> Tạo gói mới
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên Gói</th>
                            <th>Giá Tiền</th>
                            <th>Danh Mục</th>
                            <th>Ảnh</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.TenGoi</td>
                                <td class="text-danger">@item.GiaTien.ToString("N0") đ</td>
                                <td><span class="badge bg-info text-dark">@item.MaDanhMucNavigation?.TenDanhMuc</span></td>
                                <td class="text-center align-middle">
                                    @if (!string.IsNullOrEmpty(item.AnhDaiDien))
                                    {
                                        <img src="@item.AnhDaiDien"
                                             class="img-thumbnail transition-img"
                                             alt="@item.TenGoi"
                                             onerror="this.onerror=null; this.src='https://placehold.co/100x100?text=No+Image';" />
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Chưa có ảnh</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaGoi" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.MaGoi" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>