@model PhotoBooking.Models.NguoiDung

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container-fluid py-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Update" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 text-center p-4">
                    <div class="mb-3 position-relative d-inline-block mx-auto">
                        <img src="@(Model.AnhDaiDien ?? "https://ui-avatars.com/api/?name=" + Model.HoVaTen)"
                             class="rounded-circle shadow-sm"
                             style="width: 150px; height: 150px; object-fit: cover; border: 5px solid #f8f9fa;"
                             id="previewAvatar">

                        <label for="avatarFile" class="position-absolute bottom-0 end-0 bg-primary text-white rounded-circle p-2 cursor-pointer shadow"
                               style="width: 40px; height: 40px; cursor: pointer;" title="Đổi Avatar">
                            <i class="fa-solid fa-camera"></i>
                        </label>
                        <input type="file" name="avatarFile" id="avatarFile" class="d-none" accept="image/*" onchange="previewImage(this)">
                    </div>

                    <h5 class="fw-bold">@Model.HoVaTen</h5>
                    <p class="text-muted text-uppercase small">@Model.VaiTro</p>

                    <div class="mt-3 text-start">
                        <label class="form-label fw-bold small">Ảnh bìa hồ sơ</label>
                        <input type="file" name="coverFile" class="form-control form-control-sm" accept="image/*">
                        @if (!string.IsNullOrEmpty(Model.AnhBia))
                        {
                            <div class="mt-2">
                                <img src="@Model.AnhBia" class="img-fluid rounded" style="height: 100px; object-fit: cover; width: 100%;">
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card shadow border-0">
                    <div class="card-header bg-white py-3">
                        <h6 class="m-0 fw-bold text-primary">Thông tin chi tiết</h6>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <input asp-for="HoVaTen" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        @if (Model.VaiTro == "Photographer")
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Kinh nghiệm (Năm)</label>
                                <input asp-for="SoNamKinhNghiem" class="form-control" type="number" min="0" />
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Giới thiệu bản thân (Bio)</label>
                            <textarea asp-for="GioiThieu" class="form-control" rows="5" placeholder="Hãy viết gì đó ấn tượng về bạn..."></textarea>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="fa-solid fa-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('previewAvatar').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>