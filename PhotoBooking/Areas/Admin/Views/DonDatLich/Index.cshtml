@model IEnumerable<PhotoBooking.Models.DonDatLich>

@{
    ViewData["Title"] = "Quản lý Đơn đặt lịch";
}

<div class="container-fluid py-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Đơn đặt lịch</h6>
            @if (TempData["Success"] != null)
            {
                <span class="badge bg-success">@TempData["Success"]</span>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                    <thead class="bg-light">
                        <tr>
                            <th>Mã</th>
                            <th>Khách hàng</th>
                            <th>Gói dịch vụ</th>
                            <th>Ngày chụp</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">#@item.MaDon</td>
                                <td>
                                    <div class="fw-bold">@item.MaKhachHangNavigation?.HoVaTen</div>
                                    <div class="small text-muted">@item.MaKhachHangNavigation?.SoDienThoai</div>
                                </td>
                                <td>
                                    @item.MaGoiNavigation?.TenGoi
                                    @if (!string.IsNullOrEmpty(item.GhiChu))
                                    {
                                        <i class="fa-solid fa-circle-info text-info ms-1" title="Ghi chú: @item.GhiChu"></i>
                                    }
                                </td>
                                <td>
                                    <div>@item.NgayChup.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@item.NgayChup.ToString("HH:mm")</small>
                                </td>
                                <td class="text-danger fw-bold">
                                    @item.TongTien?.ToString("N0") đ
                                </td>
                                <td>
                                    @if (item.TrangThai == 0)
                                    {
                                        <span class="badge bg-warning text-dark">⏳ Chờ duyệt</span>
                                    }
                                    else if (item.TrangThai == 1)
                                    {
                                        <span class="badge bg-success">✅ Đã duyệt</span>
                                    }
                                    else if (item.TrangThai == 2)
                                    {
                                        <span class="badge bg-primary">📸 Hoàn thành</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">❌ Đã hủy</span>
                                    }
                                </td>
                                <td>
                                    @if (item.TrangThai == 0) // Chỉ hiện nút khi đang chờ
                                    {
                                        <a asp-action="Approve" asp-route-id="@item.MaDon" class="btn btn-sm btn-success" title="Chấp nhận">
                                            <i class="fa-solid fa-check"></i>
                                        </a>
                                        <a asp-action="Reject" asp-route-id="@item.MaDon" class="btn btn-sm btn-outline-danger" title="Từ chối" onclick="return confirm('Bạn muốn từ chối đơn này?')">
                                            <i class="fa-solid fa-xmark"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">---</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>