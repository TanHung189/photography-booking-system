@model List<PhotoBooking.ViewModels.PhotographerViewModel>

@{
    ViewData["Title"] = "Danh sách Nhiếp ảnh gia";
}

<div class="bg-dark text-white py-5 mb-5" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1516035069371-29a1b244cc32?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') center/cover;">
    <div class="container text-center">
        <h1 class="fw-bold display-5">Cộng đồng Nhiếp ảnh gia</h1>
        <p class="lead">Tìm kiếm những gương mặt tài năng nhất cho bộ ảnh của bạn</p>
    </div>
</div>

<div class="container pb-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-shadow">

                    <div id="carousel-@item.User.MaNguoiDung" class="carousel slide">
                        <div class="carousel-inner" style="height: 240px;">
                            @for (int i = 0; i < item.SlideImages.Count; i++)
                            {
                                <div class="carousel-item h-100 @(i == 0 ? "active" : "")">
                                    <img src="@item.SlideImages[i]" class="d-block w-100 h-100 object-fit-cover" alt="Portfolio Image">
                                </div>
                            }
                        </div>

                        @if (item.SlideImages.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@item.User.MaNguoiDung" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon small-icon" aria-hidden="true"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@item.User.MaNguoiDung" data-bs-slide="next">
                                <span class="carousel-control-next-icon small-icon" aria-hidden="true"></span>
                            </button>
                        }
                    </div>

                    <div class="card-body p-3 pt-0 position-relative">
                        <div class="position-absolute top-0 start-0 ms-3 translate-middle-y">
                            <a asp-controller="Photographer" asp-action="Profile" asp-route-id="@item.User.MaNguoiDung">
                                <img src="@(item.User.AnhDaiDien ?? "https://ui-avatars.com/api/?name=" + item.User.HoVaTen)"
                                     class="rounded-circle border border-3 border-white shadow-sm"
                                     width="70" height="70" style="object-fit: cover; background: white;">
                            </a>
                        </div>

                        <div style="margin-top: 45px;"></div>

                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="fw-bold mb-0 text-truncate" style="max-width: 200px;">
                                    <a asp-controller="Photographer" asp-action="Profile" asp-route-id="@item.User.MaNguoiDung" class="text-dark text-decoration-none hover-orange">
                                        @item.User.HoVaTen
                                    </a>
                                </h5>
                                @if (item.User.MaDiaDiemNavigation != null)
                                {
                                    <span class="text-muted small">
                                        <i class="fa-solid fa-location-dot text-danger me-1"></i>
                                        @item.User.MaDiaDiemNavigation.TenThanhPho
                                    </span>
                                }
                            </div>

                            <div class="text-end">
                                @if (item.AvgRating > 0)
                                {
                                    <div class="text-warning fw-bold">
                                        <i class="fa-solid fa-star"></i> @item.AvgRating.ToString("0.0")
                                    </div>
                                    <small class="text-muted">(@item.ReviewCount đánh giá)</small>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">Mới</span>
                                }
                            </div>
                        </div>

                        <p class="text-muted small line-clamp-2 mb-3">
                            @(item.User.GioiThieu ?? "Nhiếp ảnh gia chuyên nghiệp, sẵn sàng ghi lại những khoảnh khắc đẹp nhất của bạn.")
                        </p>

                        <div class="d-flex justify-content-between align-items-center border-top pt-2">
                            <small class="text-muted">
                                <i class="fa-solid fa-briefcase me-1"></i> @item.PackageCount gói dịch vụ
                            </small>

                            @if (item.User.SoNamKinhNghiem > 0)
                            {
                                <span class="badge bg-orange-subtle text-orange">
                                    @item.User.SoNamKinhNghiem năm kinh nghiệm
                                </span>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* CSS Tùy chỉnh */
    .text-orange {
        color: #fd7e14;
    }

    .bg-orange-subtle {
        background-color: #fff4e6;
    }

    .hover-orange:hover {
        color: #fd7e14 !important;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .hover-shadow {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.15) !important;
        }

    /* Giới hạn số dòng của Bio */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Nút slide nhỏ gọn */
    .small-icon {
        width: 1.5rem;
        height: 1.5rem;
        background-color: rgba(0,0,0,0.3);
        border-radius: 50%;
        background-size: 50%;
    }
</style>