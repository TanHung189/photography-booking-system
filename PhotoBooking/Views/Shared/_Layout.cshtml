<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotoBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotoBooking.styles.css" asp-append-version="true" />
   <style>

    /* 1. Màu chữ mặc định của link (Màu đen) */
    .navbar-nav .nav-link {
        color: var(--primary-dark) !important; /* Dùng màu đen làm mặc định */
        font-weight: 500; /* Chữ đậm hơn một chút cho rõ */
        transition: color 0.3s ease; /* Hiệu ứng chuyển màu mượt mà */
    }

    /* 2. Khi di chuột vào: Đổi màu chữ sang cam */
    .navbar-nav .nav-link:hover {
        color: var(--primary-orange) !important;
    }

    /* 3. Link đang active (trang hiện tại) cũng màu cam */
    .navbar-nav .nav-link.active {
        color: var(--primary-orange) !important;
        font-weight: 700;
    }

    /* --- LOGO BRAND --- */
    .brand-tahu {
        font-family: 'Montserrat', sans-serif;
        font-weight: 900; 
        font-size: 2rem;
        color: var(--primary-dark); /* Màu đen */
        letter-spacing: -1px; 
        display: flex;
        align-items: baseline; 
        text-decoration: none;
    }

    .brand-tahu .dot {
        color: var(--primary-orange); /* Dùng chung màu cam */
        font-size: 2.5rem;
        line-height: 0;
        margin: 0 5px;
    }

    .brand-tahu .sub-text {
        font-weight: 400;
        font-size: 0.9rem;
        color: #666;
        letter-spacing: 2px;
        margin-left: 5px;
    }

    .dropdown-toggle::after {
        display: none !important; /* Ẩn tam giác nhỏ bên cạnh ảnh */
    }
    /* Hiệu ứng hiện menu mượt mà */
    .animated { animation-duration: 0.3s; }
    .fadeIn { animation-name: fadeIn; }
    @("@keyframes") fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

</style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
               <a class="navbar-brand brand-tahu" asp-area="" asp-controller="Home" asp-action="Index">
    TAHU<span class="dot">.</span>
    <span class="sub-text">FOTO</span>
</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* --- BẮT ĐẦU ĐOẠN CODE MỚI --- *@
                    <ul class="navbar-nav flex-grow-1">
                        @* Link bên trái (Giữ nguyên) *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Đặt lịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Index">Danh sách buổi chụp</a>
                        </li
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Photographer" asp-action="Index">Nhiếp ảnh gia</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Photographer") && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="YeuCau" asp-action="MyRequests">
                                    Yêu cầu của tôi
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Photographer") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="YeuCau" asp-action="JobMarket">
                                    <i class="fa-solid fa-briefcase me-1"></i> Săn việc
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Liên hệ</a>
                        </li>
                    </ul>

                   @* Phần bên phải: Kiểm tra Đăng nhập *@
<ul class="navbar-nav ms-auto align-items-center">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        // 1. Lấy Avatar từ Claim ra
        var avatarClaim = User.FindFirst("Avatar")?.Value;
        var userName = User.Identity.Name;
        
        // Nếu không có avatar thì dùng ảnh tạo tự động theo tên
        var avatarUrl = string.IsNullOrEmpty(avatarClaim) 
                        ? $"https://ui-avatars.com/api/?name={userName}&background=random&color=fff" 
                        : avatarClaim;

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center p-0" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="@avatarUrl" alt="Avatar" 
                     class="rounded-circle border border-2 border-white shadow-sm" 
                     width="40" height="40" 
                     style="object-fit: cover;">
            </a>
            
            <ul class="dropdown-menu dropdown-menu-end shadow animated fadeIn" aria-labelledby="userDropdown" style="border-radius: 10px; border: none; min-width: 200px;">
                
                <li>
                    <h6 class="dropdown-header text-dark fw-bold py-2">
                        @userName
                        <br><span class="small text-muted fw-normal">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                    </h6>
                </li>
                <li><hr class="dropdown-divider"></li>

                <li>
                    <a class="dropdown-item py-2" asp-area="" asp-controller="Account" asp-action="ProfileCustomer">
                        <i class="fa-regular fa-id-card me-2 text-secondary" style="width:20px"></i> Hồ sơ của tôi
                    </a>
                </li>
                <li>
                    <a class="dropdown-item py-2" asp-area="" asp-controller="Home" asp-action="MyBookings">
                        <i class="fa-solid fa-list-check me-2 text-secondary" style="width:20px"></i> Lịch sử đơn
                    </a>
                </li>

                @if (User.IsInRole("Admin") || User.IsInRole("Photographer"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item py-2 text-danger fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-user-shield me-2" style="width:20px"></i> Trang Quản Trị
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider"></li>
                
                <li>
                    <a class="dropdown-item py-2 text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fa-solid fa-power-off me-2" style="width:20px"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link fw-bold text-dark" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
        </li>
        <li class="nav-item ms-2">
            <a class="btn btn-dark rounded-pill px-4 btn-sm fw-bold" asp-area="" asp-controller="Account" asp-action="Login">
                Đăng nhập
            </a>
        </li>
    }
</ul>
                    @* --- KẾT THÚC ĐOẠN CODE MỚI --- *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PhotoBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
