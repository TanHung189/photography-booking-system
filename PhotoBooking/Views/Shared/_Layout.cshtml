<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotoBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotoBooking.styles.css" asp-append-version="true" />
   <style>

    /* 1. Màu chữ mặc định của link (Màu đen) */
    .navbar-nav .nav-link {
        color: var(--primary-dark) !important; /* Dùng màu đen làm mặc định */
        font-weight: 500; /* Chữ đậm hơn một chút cho rõ */
        transition: color 0.3s ease; /* Hiệu ứng chuyển màu mượt mà */
    }

    /* 2. Khi di chuột vào: Đổi màu chữ sang cam */
    .navbar-nav .nav-link:hover {
        color: var(--primary-orange) !important;
    }

    /* 3. Link đang active (trang hiện tại) cũng màu cam */
    .navbar-nav .nav-link.active {
        color: var(--primary-orange) !important;
        font-weight: 700;
    }

    /* --- LOGO BRAND --- */
    .brand-tahu {
        font-family: 'Montserrat', sans-serif;
        font-weight: 900; 
        font-size: 2rem;
        color: var(--primary-dark); /* Màu đen */
        letter-spacing: -1px; 
        display: flex;
        align-items: baseline; 
        text-decoration: none;
    }

    .brand-tahu .dot {
        color: var(--primary-orange); /* Dùng chung màu cam */
        font-size: 2.5rem;
        line-height: 0;
        margin: 0 5px;
    }

    .brand-tahu .sub-text {
        font-weight: 400;
        font-size: 0.9rem;
        color: #666;
        letter-spacing: 2px;
        margin-left: 5px;
    }
</style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
               <a class="navbar-brand brand-tahu" asp-area="" asp-controller="Home" asp-action="Index">
    TAHU<span class="dot">.</span>
    <span class="sub-text">FOTO</span>
</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* --- BẮT ĐẦU ĐOẠN CODE MỚI --- *@
                    <ul class="navbar-nav flex-grow-1">
                        @* Link bên trái (Giữ nguyên) *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Đặt lịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Danh sách buổi chụp</a>
                        </li
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Nhiếp ảnh gia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                   @* Phần bên phải: Kiểm tra Đăng nhập *@
<ul class="navbar-nav ms-auto align-items-center">
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        @* === TRƯỜNG HỢP ĐÃ ĐĂNG NHẬP === *@
        
        @* 1. Lời chào *@
        <li class="nav-item me-3">
            <span class="nav-link text-dark fw-bold">
                👋 Xin chào, @User.Identity.Name!
            </span>
        </li>

        @* 2. Nút Lịch sử đơn (Ai đăng nhập cũng thấy) *@
        <li class="nav-item me-2">
            <a class="nav-link text-primary fw-bold" asp-controller="Home" asp-action="MyBookings">
                <i class="fa-solid fa-list-check me-1"></i> Lịch sử đơn
            </a>
        </li>

        @* 3. Nút Quản trị (Chỉ Admin hoặc Photographer mới thấy) *@
        @if (User.IsInRole("Admin") || User.IsInRole("Photographer"))
        {
            <li class="nav-item me-2">
                <a class="nav-link text-danger fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-user-shield me-1"></i> Quản trị
                </a>
            </li>
        }

        @* 4. Nút Đăng xuất *@
        <li class="nav-item">
            <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">
                Đăng xuất
            </a>
        </li>
    }
    else
    {
        @* === TRƯỜNG HỢP CHƯA ĐĂNG NHẬP === *@
        <li class="nav-item">
            <a class="nav-link text-dark" href="#">Đăng ký</a>
        </li>
        <li class="nav-item ms-2">
            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">
                Đăng nhập
            </a>
        </li>
    }
</ul>
                    @* --- KẾT THÚC ĐOẠN CODE MỚI --- *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PhotoBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
