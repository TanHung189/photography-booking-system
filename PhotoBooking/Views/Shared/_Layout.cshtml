<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAHU.FOTO</title>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotoBooking.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary-orange: #ff5700;
            --primary-dark: #2d3436;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fcfcfc;
            color: var(--primary-dark);
            display: flex; /* 1. Biến body thành flex container */
            flex-direction: column; /* 2. Sắp xếp các phần tử theo chiều dọc */
            min-height: 100vh;
        }

        .navbar-wrapper {
            background-color: #ffffff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            padding: 10px 0;
        }

        /* --- LOGO BRAND --- */
        .brand-tahu {
            font-family: 'Montserrat', sans-serif;
            font-weight: 900;
            font-size: 2rem;
            color: var(--primary-dark);
            letter-spacing: -1px;
            display: flex;
            align-items: baseline;
            text-decoration: none;
            margin-right: 20px; /* Thêm khoảng cách an toàn bên phải logo */
        }

            .brand-tahu .dot {
                color: var(--primary-orange);
                font-size: 2.5rem;
                line-height: 0;
                margin: 0 5px;
            }

            .brand-tahu .sub-text {
                font-weight: 400;
                font-size: 0.9rem;
                color: #666;
                letter-spacing: 2px;
                margin-left: 5px;
            }

        /* Menu Links */
        .navbar-nav .nav-link {
            color: var(--primary-dark) !important;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 10px 18px !important; /* Tăng padding ngang để các link cách nhau đều và thoáng hơn */
            transition: all 0.3s ease;
            position: relative;
        }

            .navbar-nav .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 5px;
                left: 50%;
                background-color: var(--primary-orange);
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: var(--primary-orange) !important;
            }

                .navbar-nav .nav-link:hover::after,
                .navbar-nav .nav-link.active::after {
                    width: 80%;
                }

        /* Buttons & Dropdown */
        .btn-custom-login {
            background-color: var(--primary-orange);
            color: white !important;
            border-radius: 50px;
            padding: 8px 25px;
            font-weight: 600;
            font-size: 0.9rem;
            box-shadow: 0 4px 10px rgba(255, 87, 0, 0.3);
            transition: transform 0.2s;
        }

            .btn-custom-login:hover {
                transform: translateY(-2px);
                background-color: #e04d00;
            }

        .link-register {
            color: var(--primary-dark);
            font-weight: 600;
            text-decoration: none;
            margin-right: 15px;
            font-size: 0.9rem;
        }

            .link-register:hover {
                color: var(--primary-orange);
            }

        .dropdown-toggle::after {
            display: none !important;
        }

        .user-dropdown-menu {
            border: none;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
            padding: 10px;
            margin-top: 15px;
        }

        .dropdown-item {
            border-radius: 8px;
            font-size: 0.9rem;
            padding: 10px 15px;
        }

            .dropdown-item:hover {
                background-color: #fff4ec;
                color: var(--primary-orange);
            }

        .animated {
            animation-duration: 0.3s;
        }

        .fadeIn {
            animation-name: fadeIn;
        }
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        #btn-back-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            display: none; /* Mặc định ẩn, chỉ hiện khi cuộn xuống */
            z-index: 99; /* Đảm bảo nó nổi lên trên các thành phần khác */
            /* Style cho đẹp */
            width: 50px;
            height: 50px;
            border-radius: 50%; /* Bo tròn hoàn toàn */
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            transition: all 0.3s ease-in-out;
            background-color: var(--primary-orange, #ff5700); /* Dùng màu cam chủ đạo */
            border: none;
        }

            #btn-back-to-top:hover {
                transform: translateY(-5px); /* Hiệu ứng bay lên nhẹ khi di chuột */
                background-color: #e64a19;
            }


        /* --- FOOTER STYLE --- */
        .footer-custom {
            background-color: #1a1a1a; /* Màu xám đen sang trọng */
            color: #b0b0b0;
            font-size: 0.9rem;
        }

            .footer-custom h5 {
                color: #ffffff;
                font-weight: 700;
                margin-bottom: 20px;
                letter-spacing: 0.5px;
            }

            .footer-custom a {
                color: #b0b0b0;
                text-decoration: none;
                transition: all 0.3s ease;
                display: block;
                margin-bottom: 10px;
            }

                .footer-custom a:hover {
                    color: var(--primary-orange); /* Màu cam chủ đạo */
                    padding-left: 5px; /* Hiệu ứng dịch chuyển nhẹ */
                }

        .social-links a {
            display: inline-block;
            width: 36px;
            height: 36px;
            line-height: 36px;
            background: #333;
            color: #fff;
            text-align: center;
            border-radius: 50%;
            margin-right: 10px;
            transition: all 0.3s;
        }

            .social-links a:hover {
                background: var(--primary-orange);
                color: #fff;
                transform: translateY(-3px);
            }

        .footer-bottom {
            background-color: #111;
            border-top: 1px solid #333;
            padding: 20px 0;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>

    <header class="sticky-top navbar-wrapper">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent p-0">

                <a class="navbar-brand brand-tahu" asp-area="" asp-controller="Home" asp-action="Index">
                    TAHU<span class="dot">.</span>
                    <span class="sub-text">FOTO</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">

                    <ul class="navbar-nav me-auto ms-lg-4 mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Đặt Lịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Service" asp-action="Index">Gói Chụp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Photographer" asp-action="Index">Nhiếp Ảnh Gia</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Photographer") && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="YeuCau" asp-action="MyRequests">Yêu Cầu</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Photographer") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="YeuCau" asp-action="JobMarket">
                                 Săn Việc
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="Privacy">Liên Hệ</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var avatarClaim = User.FindFirst("Avatar")?.Value;
                            var userName = User.Identity.Name;
                            var avatarUrl = string.IsNullOrEmpty(avatarClaim)
                            ? $"https://ui-avatars.com/api/?name={userName}&background=ff5700&color=fff&size=128"
                            : avatarClaim;

                            <li class="nav-item dropdown ms-3">
                                <a class="nav-link dropdown-toggle d-flex align-items-center p-0" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="me-2 d-none d-lg-block fw-bold text-dark small">@userName</span>
                                    <img src="@avatarUrl" alt="Avatar"
                                         class="rounded-circle shadow-sm"
                                         width="40" height="40"
                                         style="object-fit: cover; border: 2px solid white; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu animated fadeIn" aria-labelledby="userDropdown">
                                    <li>
                                        <h6 class="dropdown-header text-dark fw-bold">
                                            Xin chào, @userName!
                                            <br><span class="small text-muted fw-normal">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                        </h6>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ProfileCustomer">
                                            <i class="fa-regular fa-id-card"></i> Hồ sơ cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MyBookings">
                                            <i class="fa-solid fa-list-check"></i> Lịch sử đơn
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Photographer"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                                <i class="fa-solid fa-user-shield"></i> Trang Quản Trị
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <i class="fa-solid fa-power-off"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center ms-lg-3 mt-3 mt-lg-0">
                                <a class="link-register" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
                                <a class="btn btn-custom-login" asp-area="" asp-controller="Account" asp-action="Login">
                                    Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </nav>
        </div>
    </header>

    <div class="container main-content my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom mt-auto pt-5">
        <div class="container">
            <div class="row g-4">

                <div class="col-lg-4 col-md-6">
                    <a class="brand-tahu mb-4 d-block text-white" href="/">
                        TAHU<span class="dot">.</span><span class="sub-text text-white-50">FOTO</span>
                    </a>
                    <p class="mb-4">
                        Nền tảng kết nối nhiếp ảnh gia chuyên nghiệp và khách hàng hàng đầu Việt Nam. Lưu giữ những khoảnh khắc vô giá của bạn ngay hôm nay.
                    </p>
                    <div class="social-links">
                        <a href="https://www.facebook.com/tan.hung.492771"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-tiktok"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5>Dịch Vụ</h5>
                    <a href="/Home/Search?category=Cuoi">Chụp Ảnh Cưới</a>
                    <a href="/Home/Search?category=KyYeu">Kỷ Yếu & Sự Kiện</a>
                    <a href="/Home/Search?category=Lookbook">Lookbook Thời Trang</a>
                    <a href="/Home/Search?category=Baby">Chụp Ảnh Bé & Family</a>
                    <a href="/Home/Search?category=Food">Food & Sản Phẩm</a>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5>Hỗ Trợ</h5>
                    <a href="#">Về Chúng Tôi</a>
                    <a href="#">Quy Trình Đặt Lịch</a>
                    <a href="#">Chính Sách Bảo Mật</a>
                    <a href="#">Điều Khoản Sử Dụng</a>
                    <a href="#">Tuyển Dụng Photographer</a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <h5>Liên Hệ</h5>
                    <p><i class="fas fa-map-marker-alt me-2 text-warning"></i> Long Xuyên, An Giang</p>
                    <p><i class="fas fa-phone-alt me-2 text-warning"></i> Hotline: 039 9308 546</p>
                    <p><i class="fas fa-envelope me-2 text-warning"></i> hung189204@gmail.com</p>

                    <form class="mt-3 d-flex">
                        <input type="email" class="form-control rounded-pill me-2" placeholder="Email của bạn...">
                        <button class="btn btn-warning rounded-pill text-white fw-bold px-3">Gửi</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="footer-bottom mt-5">
            <div class="container text-center text-md-start">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        &copy; 2025 <strong>TAHU.FOTO</strong>. All Rights Reserved.
                    </div>
                    <div class="col-md-6 text-center text-md-end mt-2 mt-md-0">
                        <span class="text-white-50">Designed by </span><span class="text-warning fw-bold">Tấn Hưng</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <button type="button" class="btn btn-warning btn-floating btn-lg" id="btn-back-to-top">
        <i class="fas fa-arrow-up text-white"></i>
    </button>

    <script>
        // Lấy nút từ DOM
        let mybutton = document.getElementById("btn-back-to-top");

        // Lắng nghe sự kiện cuộn chuột
        window.onscroll = function () {
            scrollFunction();
        };

        function scrollFunction() {
            // Nếu cuộn xuống quá 20px thì hiện nút, ngược lại thì ẩn
            if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // Khi click vào nút thì cuộn mượt lên đầu
        mybutton.addEventListener("click", backToTop);

        function backToTop() {
            window.scrollTo({
                top: 0,
                behavior: "smooth" // Quan trọng: Tạo hiệu ứng trượt mượt mà
            });
        }
    </script>
</body>
</html>