@model List<PhotoBooking.Models.DonDatLich>

@{
    ViewData["Title"] = "Quản lý lịch đặt";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="bg-light py-5" style="min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <h3 class="fw-bold mb-4 text-dark">Quản lý lịch đặt</h3>

                <ul class="nav nav-pills nav-fill bg-white shadow-sm rounded-pill p-1 mb-4" id="bookingTabs" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#tab-all">Tất cả</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#tab-pending">Chờ xác nhận</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#tab-confirmed">Sắp tới</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#tab-finished">Hoàn thành</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#tab-cancelled">Đã hủy</button>
                    </li>
                </ul>

                <div class="tab-content">

                    <div class="tab-pane fade show active" id="tab-all">
                        @await Html.PartialAsync("_BookingListPartial", Model)
                    </div>

                    <div class="tab-pane fade" id="tab-pending">
                        @await Html.PartialAsync("_BookingListPartial", Model.Where(x => x.TrangThai == 0).ToList())
                    </div>

                    <div class="tab-pane fade" id="tab-confirmed">
                        @await Html.PartialAsync("_BookingListPartial", Model.Where(x => x.TrangThai == 1).ToList())
                    </div>

                    <div class="tab-pane fade" id="tab-finished">
                        @await Html.PartialAsync("_BookingListPartial", Model.Where(x => x.TrangThai == 2).ToList())
                    </div>

                    <div class="tab-pane fade" id="tab-cancelled">
                        @await Html.PartialAsync("_BookingListPartial", Model.Where(x => x.TrangThai == 3).ToList())
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateRating(maDon, soSao) {
            // 1. Cập nhật giá trị vào ô Input Ẩn (Để gửi về Server)
            var inputElement = document.getElementById("rating-input-" + maDon);
            if (inputElement) {
                inputElement.value = soSao;
                console.log("Đã cập nhật đơn " + maDon + " thành " + soSao + " sao."); // Kiểm tra F12
            } else {
                console.error("Không tìm thấy ô input của đơn " + maDon);
            }

            // 2. Đổi màu các ngôi sao (Hiệu ứng thị giác)
            for (var i = 1; i <= 5; i++) {
                var star = document.getElementById("star-" + maDon + "-" + i);
                if (star) {
                    if (i <= soSao) {
                        star.style.color = "#ffc107"; // Vàng
                    } else {
                        star.style.color = "#e4e5e9"; // Xám
                    }
                }
            }

            // 3. Cập nhật chữ hiển thị
            var textElement = document.getElementById("rating-text-" + maDon);
            if (textElement) {
                var texts = ["Rất tệ", "Kém", "Bình thường", "Tốt", "Tuyệt vời"];
                textElement.innerText = texts[soSao - 1] + " (" + soSao + "/5)";
            }
        }
    </script>
}

<style>
    /* CSS Tùy chỉnh cho Tab */
    .nav-pills .nav-link {
        color: #555;
        transition: 0.3s;
    }

        .nav-pills .nav-link.active {
            background-color: #ff4757;
            color: white;
            box-shadow: 0 4px 10px rgba(255, 71, 87, 0.4);
        }

    /* CSS cho Card đơn hàng */
    .booking-card {
        transition: transform 0.2s ease;
        border: 1px solid #eee;
    }

        .booking-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

    .img-service {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 10px;
    }

    .cursor-pointer {
        cursor: pointer;
        transition: 0.2s;
    }

        .cursor-pointer:hover {
            transform: scale(1.2);
        }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-secondary {
        color: #e4e5e9 !important;
    }
    /* Màu xám nhạt */
</style>