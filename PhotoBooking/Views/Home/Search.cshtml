@* View này nhận vào một Danh sách các Gói dịch vụ *@
@model List<PhotoBooking.Models.GoiDichVu>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">Kết quả tìm kiếm (@Model.Count gói dịch vụ)</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>
            Không tìm thấy gói dịch vụ nào phù hợp với tiêu chí của bạn. Vui lòng thử lại!
        </div>
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-primary rounded-pill">Quay lại trang chủ</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var package in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <img src="https://source.unsplash.com/random/400x300/?photography&sig=@package.MaGoi" class="card-img-top object-fit-cover" style="height: 240px;">

                        <div class="card-body">
                            <span class="badge bg-primary-subtle text-primary mb-2">@package.MaDanhMucNavigation.TenDanhMuc</span>
                            <h5 class="card-title fw-bold text-truncate" title="@package.TenGoi">@package.TenGoi</h5>

                            <div class="d-flex align-items-center mb-3">
                                <img src="https://ui-avatars.com/api/?name=@package.MaNhiepAnhGiaNavigation.HoVaTen&background=random" class="rounded-circle me-2" width="30" height="30" alt="Avatar">
                                <small class="text-muted">Bởi <strong>@package.MaNhiepAnhGiaNavigation.HoVaTen</strong></small>
                            </div>

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="fa-regular fa-clock me-1"></i> @package.ThoiLuong phút</span>
                                <span><i class="fa-solid fa-user-group me-1"></i> Tối đa @package.SoNguoiToiDa người</span>
                            </div>

                            <h5 class="text-danger fw-bold mb-0">@package.GiaTien.ToString("N0") đ</h5>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@package.MaGoi" class="btn btn-outline-danger w-100 rounded-pill fw-bold">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<select class="form-select border-0 fw-bold" name="searchLocation" id="province-select-search">
    <option value="">Bạn muốn chụp ở đâu?</option>
</select>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Lấy giá trị vừa tìm kiếm từ ViewBag (do Controller gửi sang)
            var selectedLoc = '@ViewBag.SelectedLocation';

            fetch('https://provinces.open-api.vn/api/?depth=1')
                .then(response => response.json())
                .then(data => {
                    var select = document.getElementById('province-select-search');

                    data.forEach(item => {
                        var cleanName = item.name.replace('Tỉnh ', '').replace('Thành phố ', '');
                        var option = document.createElement('option');
                        option.value = cleanName;
                        option.text = cleanName;

                        // Nếu tên trùng với cái vừa tìm -> Đánh dấu chọn
                        if (cleanName === selectedLoc) {
                            option.selected = true;
                        }

                        select.appendChild(option);
                    });
                });
        });
    </script>
}

@* Tái sử dụng CSS hover *@
<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>