@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - PotoBooking</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fff;
        }

        .login-container {
            min-height: 100vh;
        }

        /* 1. Video nằm dưới cùng (z-index: 0) */
        .bg-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: 0;
        }

        /* 2. Lớp phủ tối màu nằm ở giữa (z-index: 10) */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            /* Dùng màu đen mờ 60% để đảm bảo chữ luôn rõ */
            background-color: rgba(0, 0, 0, 0.6);
            z-index: 10;
        }

        /* 3. Chữ nằm trên cùng (z-index: 20) */
        .caption {
            position: absolute;
            bottom: 80px; /* Nâng cao lên một chút */
            left: 60px;
            color: white;
            z-index: 20; /* Số càng to càng nổi lên trên */
            text-shadow: 0 2px 10px rgba(0,0,0,0.8); /* Thêm bóng để chữ sắc nét hơn */
        }

        /* Cột Form bên trái */
        .login-form-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }

        .login-content {
            width: 100%;
            max-width: 400px;
        }

        .brand-logo {
            font-weight: 700;
            font-size: 24px;
            color: #333;
            margin-bottom: 30px;
            display: inline-block;
            text-decoration: none;
        }

            .brand-logo i {
                color: #000;
            }

        /* Input kiểu Floating Label (Hiện đại) */
        .form-floating > .form-control {
            border: 1px solid #e1e1e1;
            border-radius: 8px;
        }

            .form-floating > .form-control:focus {
                border-color: #000;
                box-shadow: none;
            }

        .btn-dark-custom {
            background-color: #111;
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-dark-custom:hover {
                background-color: #333;
                transform: translateY(-2px);
            }

        .social-btn {
            border: 1px solid #ddd;
            background: #fff;
            color: #555;
            padding: 10px;
            border-radius: 8px;
            text-align: center;
            text-decoration: none;
            display: block;
            transition: 0.2s;
        }

            .social-btn:hover {
                background: #f8f9fa;
                color: #000;
            }

        /* --- LOGO BRAND --- */
        .brand-tahu {
            font-family: 'Montserrat', sans-serif;
            font-weight: 900;
            font-size: 2rem;
            color: var(--primary-dark); /* Màu đen */
            letter-spacing: -1px;
            display: flex;
            align-items: baseline;
            text-decoration: none;
        }

            .brand-tahu .dot {
                color: var(--primary-orange); /* Dùng chung màu cam */
                font-size: 2.5rem;
                line-height: 0;
                margin: 0 5px;
            }

            .brand-tahu .sub-text {
                font-weight: 400;
                font-size: 0.9rem;
                color: #666;
                letter-spacing: 2px;
                margin-left: 5px;
            }
    
    </style>
</head>
<body>

    <div class="container-fluid p-0">
        <div class="row g-0 login-container">

            <div class="col-md-5 login-form-wrap">
                <div class="login-content">
                    <a class="navbar-brand brand-tahu" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-camera-retro me-2 text-primary"></i>TAHU<span class="dot">.</span>
                        <span class="sub-text">FOTO</span>
                    </a>

                    <h2 class="mb-2 fw-bold">Chào mừng trở lại!</h2>
                    <p class="text-muted mb-4">Vui lòng nhập thông tin để đăng nhập.</p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fa-solid fa-circle-exclamation me-2"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form method="post" action="/Account/Login">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập" required>
                            <label for="username">Tên đăng nhập</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu" required>
                            <label for="password">Mật khẩu</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember">
                                <label class="form-check-label text-muted" for="remember">Ghi nhớ</label>
                            </div>
                            <a href="#" class="text-decoration-none small text-muted fw-bold">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-dark-custom btn-lg text-white">
                                Đăng nhập ngay
                            </button>
                        </div>
                    </form>

                    <div class="text-center text-muted mb-4">
                        <small>Hoặc tiếp tục với</small>
                    </div>

                    <div class="row g-2 mb-4">
                        <div class="col">
                            <a href="#" class="social-btn"><i class="fa-brands fa-google me-2"></i>Google</a>
                        </div>
                        <div class="col">
                            <a href="#" class="social-btn"><i class="fa-brands fa-facebook me-2"></i>Facebook</a>
                        </div>
                    </div>

                    <p class="text-center text-muted">
                        Chưa có tài khoản? <a href="/Account/Register" class="text-dark fw-bold text-decoration-none">Đăng ký miễn phí</a>
                    </p>
                </div>
            </div>

            <div class="col-md-7 position-relative overflow-hidden p-0 d-none d-md-block">

                <video autoplay muted loop playsinline class="bg-video">
                    <source src="https://res.cloudinary.com/ditpj0bdr/video/upload/v1763801507/IntroLogin_n3nilb.mp4" type="video/mp4">
                </video>

                <div class="overlay"></div>
              
                <div class="caption">
                    <h3 class="fw-bold display-6">Hãy đến với TAHU .FOTO</h3>
                    <h3 class="fw-bold display-4">Lưu giữ mọi khoảnh khắc.</h3>
                    <p class="fs-5 mb-0">Kết nối với hơn 1000+ nhiếp ảnh gia chuyên nghiệp.</p>
                </div>

            </div>

        </div>
    </div>

</body>
</html>