@model PhotoBooking.Models.NguoiDung

@{
    ViewData["Title"] = "Hồ sơ khách hàng";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 text-center p-4">
                <div class="mb-3 position-relative d-inline-block mx-auto">
                    <img src="@(Model.AnhDaiDien ?? "https://ui-avatars.com/api/?name=" + Model.HoVaTen)"
                         class="rounded-circle shadow-sm object-fit-cover"
                         width="120" height="120" id="previewAvatar">
                </div>
                <h5 class="fw-bold">@Model.HoVaTen</h5>
                <p class="text-muted small">@Model.VaiTro</p>

                <hr>
                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="MyBookings" class="btn btn-outline-primary rounded-pill">
                        <i class="fa-solid fa-list-check me-2"></i> Lịch sử đơn hàng
                    </a>
                    <a asp-action="Logout" class="btn btn-outline-danger rounded-pill">
                        <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-8">

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-primary"><i class="fa-solid fa-user-pen me-2"></i> Cập nhật thông tin</h6>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success py-2">@TempData["Success"]</div>
                    }

                    <form asp-action="UpdateProfile" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <input asp-for="HoVaTen" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Đổi Avatar</label>
                            <input type="file" name="avatarFile" class="form-control" accept="image/*" onchange="document.getElementById('previewAvatar').src = window.URL.createObjectURL(this.files[0])" />
                        </div>
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold">Lưu thay đổi</button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-danger"><i class="fa-solid fa-key me-2"></i> Đổi mật khẩu</h6>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessPass"] != null)
                    {
                        <div class="alert alert-success py-2">@TempData["SuccessPass"]</div>
                    }
                    @if (TempData["ErrorPass"] != null)
                    {
                        <div class="alert alert-danger py-2">@TempData["ErrorPass"]</div>
                    }

                    <form asp-action="ChangePassword">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mật khẩu hiện tại</label>
                            <input type="password" name="CurrentPassword" class="form-control" required />
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Mật khẩu mới</label>
                                <input type="password" name="NewPassword" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nhập lại mật khẩu mới</label>
                                <input type="password" name="ConfirmNewPassword" class="form-control" required />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Đổi mật khẩu</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>