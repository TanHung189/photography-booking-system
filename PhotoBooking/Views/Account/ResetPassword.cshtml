<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow" style="width: 400px;">
        <div class="card-body p-4">
            <h3 class="text-center fw-bold mb-3">Đặt Lại Mật Khẩu</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post">
                <input type="hidden" name="email" value="@ViewBag.Email" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Mã xác nhận (trong Email)</label>
                    <input type="text" name="code" class="form-control text-center fw-bold text-danger" required placeholder="######">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Mật khẩu mới</label>
                    <input type="password" name="newPassword" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Nhập lại mật khẩu</label>
                    <input type="password" name="confirmPassword" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Đổi mật khẩu</button>
            </form>
        </div>
    </div>
</div>