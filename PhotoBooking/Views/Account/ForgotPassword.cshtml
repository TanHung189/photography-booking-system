<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow" style="width: 400px;">
        <div class="card-body p-4">
            <h3 class="text-center fw-bold mb-3">Quên Mật Khẩu</h3>
            <p class="text-muted small text-center mb-4">Nhập email của bạn để nhận mã xác nhận.</p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Email đăng ký</label>
                    <input type="email" name="email" class="form-control" required placeholder="name@example.com">
                </div>
                <button type="submit" class="btn btn-dark w-100 rounded-pill fw-bold">Gửi mã xác nhận</button>
            </form>
            <div class="text-center mt-3"><a asp-action="Login" class="text-decoration-none">Quay lại Đăng nhập</a></div>
        </div>
    </div>
</div>